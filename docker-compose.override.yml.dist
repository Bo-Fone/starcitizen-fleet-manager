version: '3.4'
services:
    php:
        build:
            context: .
            target: build_php_dev
            dockerfile: ./docker/Dockerfile
        volumes:
            - ./:/app
        environment:
            # Docker for mac : try remote_host=host.docker.internal instead of remote_connect_back
#            XDEBUG_CONFIG: >-
#                remote_enable=1
#                remote_connect_back=1
#                remote_port=9001
#                idekey=PHPSTORM
    apache:
        volumes:
            - ./public:/app/public
        ports:
            - 127.0.0.1:8000:80
    mariadb:
        ports:
            - 127.0.0.1:3306:3306
    smtp:
        image: schickling/mailcatcher
        ports:
            - 127.0.0.1:1080:1080 # web-ui
    redis-commander:
        ports:
            - 127.0.0.1:8081:8081
