apiVersion: apps/v1
kind: Deployment
metadata:
    name: php-deployment-${TARGET_ROLE}
spec:
    replicas: 1
    selector:
        matchLabels:
            app: php
            role: ${TARGET_ROLE}
    template:
        metadata:
            labels:
                app: php
                role: ${TARGET_ROLE}
        spec:
            containers:
                -
                    name: php
                    image: ioni/sc-fleet-manager_php:${APP_VERSION}
                    env:
                        - { name: REDIS_HOST, value: redis-cluster-ip }
                        - { name: REDIS_PORT, value: '6379' }
                        - { name: DB_USER, value: root }
                        - { name: DB_PASSWORD, value: root }
                        - { name: DB_HOST, value: mariadb-cluster-ip }
                        - { name: DB_PORT, value: '3306' }
                        - { name: DB_NAME, value: fleet_manager }
                    ports:
                        - { name: fcgi, containerPort: 9000 }
