{% extends 'back_office_layout.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3">Patch Note List</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <p><a href="{{ path('bo_patch_note_create') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Create a new patch note</a></p>

        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Link</th>
                    <th scope="col">Created at</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                {% for patch_note in patch_notes %}
                    <tr>
                        <td>{{ patch_note.title }}</td>
                        <td>
                            {% if patch_note.link is not null %}
                                <a href="{{ patch_note.link }}" target="_blank">{{ patch_note.link }}</a>
                            {% endif %}
                        </td>
                        <td>{{ patch_note.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <a href="{{ path('bo_patch_note_edit', {'id': patch_note.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
