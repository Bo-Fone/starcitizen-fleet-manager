{% extends 'back_office_layout.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3">Ship Chassis List</h1>

        <p><a href="{{ path('bo_ship_chassis_create') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Create a new chassis</a></p>

        <table class="table table-hover table-sm">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for ship_chassi in ship_chassis %}
            <tr>
                <td >{{ ship_chassi.rsiId }}</td>
                <td >{{ ship_chassi.name }}</td>
                <td>
                    <form action="{{ path('bo_ship_chassis_delete', {'id': ship_chassi.id}) }}" method="post" class="js-form-remove">
                        <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <form action="{{ path('bo_refresh_ship_infos') }}" method="post" class="js-form-remove mb-3">
            <button type="submit" class="btn btn-success"><i class="fas fa-sync-alt"></i> Refresh RSI ships cache</button>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        document.querySelectorAll('.js-form-remove').forEach((el) => {
            el.addEventListener('submit', (ev) => {
                ev.preventDefault();
                const result = confirm("Confirm?");
                if (result) {
                    ev.currentTarget.submit();
                }
            });
        });
    </script>
{% endblock %}
